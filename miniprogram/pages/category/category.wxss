.container {
  height: calc(100vh - 108rpx);
  display: flex;
}
.container .left_menu {
  flex: 2;
}
.container .left_menu .menu_item {
  height: 80rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 30rpx;
}
.container .left_menu .active {
  color: var(--themeColor);
  border-left: 5rpx solid currentColor;
}
.container .right_content {
  flex: 5;
}
.container .right_content .goods_group .goods_title {
  height: 80rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.container .right_content .goods_group .goods_title .delimiter {
  color: #ccc;
  padding: 0 10rpx;
}
.container .right_content .goods_group .goods_list {
  display: flex;
  flex-wrap: wrap;
}
.container .right_content .goods_group .goods_list navigator {
  width: 33.33%;
  text-align: center;
}
.container .right_content .goods_group .goods_list navigator image {
  width: 100%;
}
